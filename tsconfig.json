{
	"compilerOptions": {
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"skipLibCheck": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"declaration": true,
		"rootDir": "src",
		"checkJs": false,
		"pretty": true
	},

	"exclude": ["test", "dist"]
}
